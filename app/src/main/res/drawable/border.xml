<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 边框 -->
    <item>
        <shape >
            <!-- 通过pading指定边线有无和宽度 -->
            <padding
                android:bottom="5dp"
                />
            <!-- 两边颜色透明 -->
            <solid
                android:color="#d9d9d9"
                />
        </shape>
    </item>

    <!-- 主体 -->
    <item>
        <!-- 这里便是分隔线的颜色 -->
        <shape >
            <solid
                android:color="#ffffff"
                />
        </shape>
    </item>

</layer-list>